<div class="d-flex justify-content-center pdtp-50">
    <div class="d-flex justify-content-center">
        <form class="container">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Name" value={{name}} oninput={{action updateName}} required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Event" value={{event}} oninput={{action updateEvent}} required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Spent" value={{spent}} oninput={{action updateSpent}} required>
            </div>
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-success btn-lg" {{on "click" addExpense}} disabled={{add-btn-disabled this.sharedExpenses this.name this.event this.spent}}>Add</button>
            </div>
        </form>
    </div>
</div>
<div class="d-flex justify-content-center pdtp-50">
    <div class="d-flex flex-column">
        {{#each this.sharedExpenses key="@index" as |sharedExpenses index|}}
            <li class="text-white pdtb-10">
                <button type="button" class="btn btn-danger" {{on "click" (fn removeExpense index)}}><img src="https://image.flaticon.com/icons/png/512/61/61848.png" width="20" height="20" alt="remove"></button>
                <span class="pdl-20 ftsz-20">{{sharedExpenses.name}} - Paid {{dollar-formatter sharedExpenses.spent}} for {{sharedExpenses.event}}</span>
            </li>
        {{/each}}
    </div>
</div>
{{#if this.sharedExpenses}}
    <div class="d-flex justify-content-center pdtp-50">
        <button type="button" class="btn btn-success btn-lg" {{on "click" tallyUp}} disabled={{tally-up-btn-disabled this.sharedExpenses}}>Tally Up</button>
    </div>
    <div class="d-flex justify-content-center pdtp-50">
        <div class="d-flex flex-column">
            {{#if this.finalList}}
                {{#each this.finalList key="@index" as |person|}}
                    <li class="font-weight-bold text-white pdtb-10 ftsz-20">
                        {{person.name}}: <span class={{color-code person.owes}}>{{dollar-formatter person.owes}}</span>
                    </li>
                {{/each}}
            {{/if}}
        </div>
    </div>
{{/if}}

{{yield}}